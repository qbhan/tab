<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@color/pokerBackground"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/left_bet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@color/brightGray"
            android:text="BET!" />

        <ImageView
            android:id="@+id/iv_card_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/avocard1" />

        <ImageView
            android:id="@+id/iv_card_right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/avocard1"
            android:scaleType="centerInside"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/right_bet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:background="@color/brightGray"
            android:text="BET!" />

    </LinearLayout>

    <Button
        android:id="@+id/b_deal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="DEAL"
        android:textColor="#000000"
        android:textSize="40sp" />

    <Button
        android:id="@+id/b_reset"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="RESET"
        android:textColor="#000000"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bet_score_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="32sp"
            android:text="0"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bet_score_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="32sp"
            android:text="0"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_score"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="TOTAL SCORE"
            android:background="@color/brightGray"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_score_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="50"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/brightGray"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_score_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="50"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@color/brightGray"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:text="This is Tab 3"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"/>-->


</RelativeLayout>